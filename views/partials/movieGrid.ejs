<% moviePosterClass = locals.large ? 'movie-poster-large' : '' %>
<% movieGridClass = locals.large ? 'movie-grid-large' : '' %>
<div class="movie-grid <%= movieGridClass %>">
    <% movies.forEach(movie => { %>
        <a href="/movies/<%= movie.id %>">
            <img class="movie-poster <%= moviePosterClass %>" src="<%= movie.posterImagePath %>">
        </a>
    <% }) %>
</div>