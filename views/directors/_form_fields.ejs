<div class="form-row">
    <div class="form-item">
        <label>Name</label>
        <input type="text" name="name" value="<%= director.name %>">
    </div>
    <div class="form-item">
        <label>Rating</label>
        <input class="rating" type="number" name="rating" min="0" max="10" value="<%= director.rating %>">
    </div>
</div>
<div class="form-row">
    <div class="form-item form-item-no-grow">
        <label>Icon</label>
        <input type="file" name="icon" class="movie-poster filepond">
    </div>
    <div class="form-item">
        <label>Description</label>
        <textarea name="description"><%= director.description %></textarea>
    </div>
</div>