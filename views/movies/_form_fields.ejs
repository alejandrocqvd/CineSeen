<div>
    <label>Title</label>
    <input type="text" name="title" value="<%= movie.title %>">
</div>
<div>
    <label>Director</label>
    <select name="director">
    <% directors.forEach(director => { %>
        <% if (director.id === movie.director) { %>
            <option selected label="<%= director.name %>" value="<%= director.id %>"></option>
        <% } else { %>
        <option label="<%= director.name %>" value="<%= director.id %>"></option>
        <% } %>
    <% }) %>
    </select>
</div>
<div>
    <label>Release Date</label>
    <input type="date" name="releaseDate" 
        value="<%= movie.releaseDate == null ? '' : movie.releaseDate.toISOString().split('T')[0] %>">
</div>
<div>
    <label>Runtime (minutes)</label>
    <input type="number" name="runtime" min="1" value="<%= movie.runtime %>">
</div>
<div>
    <label>Poster</label>
    <input type="file" name="poster" class="filepond">
</div>
<div>
    <label>Description</label>
    <textarea name="description"><%= movie.description %></textarea>
</div>